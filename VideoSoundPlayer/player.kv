<PlayerScreen>:
    orientation: 'vertical'
    spacing: dp(10)
    padding: dp(10)

    BoxLayout:
        id: video_box
        size_hint_y: 0.6
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]

    BoxLayout:
        size_hint_y: 0.2
        spacing: dp(10)
        padding: dp(10)
        Button:
            text: "â–¶ Play Video"
            on_release: root.play_video()
        Button:
            text: "â–  Stop Video"
            on_release: root.stop_video()

    BoxLayout:
        size_hint_y: 0.2
        spacing: dp(10)
        padding: dp(10)
        Button:
            text: "ðŸŽµ Play Audio"
            on_release: root.play_audio()
        Button:
            text: "â–  Stop Audio"
            on_release: root.stop_audio()
